<?xml version="1.0" encoding="utf-8"?>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/chengji_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">
    
        <TextView
            android:id="@+id/chengji_textView1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="课程名称"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/typical_red"
            android:layout_weight="2"
            android:textSize="12dp" />
          
        <TextView
            android:id="@+id/chengji_textView2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="2"
            android:background="@color/searchbooks_child_background"
            android:text="学年学期"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/chengji_textView3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="课程性质"
            android:background="@color/searchbooks_group_background"
            android:textColor="@color/black"
            android:textSize="12dp" />
   
        <TextView
            android:id="@+id/chengji_textView4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:text="学分"
            android:background="@color/searchbooks_child_background"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/chengji_textView5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:text="成绩"
            android:background="@color/searchbooks_group_background"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12dp" />
                       
         <TextView
            android:id="@+id/chengji_textView6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_weight="1"
            android:text="绩点"
            android:background="@color/searchbooks_child_background"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="12dp" />

    </LinearLayout>