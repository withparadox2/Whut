<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="155dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">
                 
    <TextView
        android:id="@+id/geren_kebiao_textView1"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:text="课程名称"
        android:gravity="center"
        android:background="#FF5735"
        android:textColor="@color/white"
        android:textSize="12dp" />
    

    <com.withparadox2.whut.InterceptScrollContainer
        android:id="@+id/geren_scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/geren_kebiao_textView1"
        android:focusable="false" >

        <com.withparadox2.whut.MyHScrollView
            android:id="@+id/geren_horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/geren_kebiao_textView2"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="课程性质"
                    android:textColor="@color/white"
                    android:gravity="center"
                     android:textSize="12dp" />
                <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />

                <TextView
                    android:id="@+id/geren_kebiao_textView3"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="是否选课"
                    android:textColor="@color/white"
                    android:gravity="center"
                     android:textSize="12dp"/>
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />

                <TextView
                    android:id="@+id/geren_kebiao_textView4"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="教师姓名"
                         android:gravity="center"
                              android:textColor="@color/white"
                     android:textSize="12dp" />
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />

                <TextView
                    android:id="@+id/geren_kebiao_textView5"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:text="学分"
                         android:textColor="@color/white"
                         android:gravity="center"
                     android:textSize="12dp"/>
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />

                <TextView
                    android:id="@+id/geren_kebiao_textView6"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="周学时"
                         android:textColor="@color/white"
                         android:gravity="center"
                     android:textSize="12dp" />
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />

                <TextView
                    android:id="@+id/geren_kebiao_textView7"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:text="上课时间"
                         android:textColor="@color/white"
                         android:gravity="center"
                     android:textSize="12dp" />
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />   
      
                <TextView
                    android:id="@+id/geren_kebiao_textView8"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="上课地点"
                         android:textColor="@color/white"
                         android:gravity="center"
                     android:textSize="12dp" />
                           <TextView          
      android:layout_width="1px" 
      android:layout_height="fill_parent" 
      android:background="#DADADA" />                            
                           

            </LinearLayout>
        </com.withparadox2.whut.MyHScrollView>
    </com.withparadox2.whut.InterceptScrollContainer>

</RelativeLayout>