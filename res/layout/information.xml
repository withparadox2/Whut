    android:orientation="vertical" >
     <com.markupartist.android.widget.ActionBar
        android:id="@+id/information_actionbar"
        style="@style/ActionBar"/>
     <ScrollView 
         android:layout_width="fill_parent"
    	 android:layout_height="fill_parent">
     <LinearLayout
		 android:layout_width="fill_parent"
