<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    <com.markupartist.android.widget.ActionBar
        android:id="@+id/jieyuechaxun_actionbar"
        style="@style/ActionBar"
        android:layout_alignParentTop="true"
        />
<RelativeLayout 
    android:id="@+id/jieyue_chaxun_head"
    android:layout_width="fill_parent"
    android:layout_height="25dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_below="@id/jieyuechaxun_actionbar"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/jieyue_chaxun_textView1"
        android:layout_width="90dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:text="题名"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12dp" />

    <com.withparadox2.whut.InterceptScrollContainer
        android:id="@+id/jieyue_scroollContainter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/jieyue_chaxun_textView1"
        android:focusable="false" >

        <com.withparadox2.whut.MyHScrollView
            android:id="@+id/jieyue_horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:focusable="false"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="false"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/jieyue_chaxun_textView2"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:text="借出时间"
                    android:textColor="@color/white"
                    android:gravity="center"
                     android:textSize="12dp" />
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />
                <TextView
                    android:id="@+id/jieyue_chaxun_textView3"
                    android:layout_width="70dp"
                    android:layout_height="fill_parent"
                    android:text="应还时间"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp"/>
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />

                <TextView
                    android:id="@+id/jieyue_chaxun_textView4"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="作者"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />

                <TextView
                    android:id="@+id/jieyue_chaxun_textView5"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:text="索书号"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp"/>
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />

                <TextView
                    android:id="@+id/jieyue_chaxun_textView6"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="馆藏地点"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp" />
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />
                           
   			    <TextView
                    android:id="@+id/jieyue_chaxun_textView7"
                    android:layout_width="60dp"
                    android:layout_height="fill_parent"
                    android:text="文献类型"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp" />
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />
                           
    		    <TextView
                    android:id="@+id/jieyue_chaxun_textView8"
                    android:layout_width="58dp"
                    android:layout_height="fill_parent"
                    android:text="条形码"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12dp" />
                <TextView          
			        android:layout_width="1px" 
			        android:layout_height="fill_parent" 
			        android:background="#DADADA" />                       
            </LinearLayout>
        </com.withparadox2.whut.MyHScrollView>
    </com.withparadox2.whut.InterceptScrollContainer>
    </RelativeLayout>
   <ListView
        android:id="@+id/jieyue_chaxun_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/jieyue_chaxun_head"
        android:listSelector="@android:color/transparent"
        android:dividerHeight="1px"
        android:divider="#FFF" >
    </ListView>
</RelativeLayout>