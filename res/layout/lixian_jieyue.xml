<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    <com.markupartist.android.widget.ActionBar
        android:id="@+id/xujie_actionbar"
        style="@style/ActionBar"/>
	<LinearLayout 
	    android:id="@+id/xujie_head"
	    android:layout_width="fill_parent"
	    android:layout_height="25dp"
	    android:layout_below="@id/xujie_actionbar"
	    android:orientation="horizontal">
	
	    <TextView
	        android:id="@+id/xujie_textView1"
	        android:layout_height="fill_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:text="题名"
	        android:gravity="center"
	        android:textColor="@color/white"
	        android:textSize="12dp" />
	    
	
	    <TextView
	        android:id="@+id/xujie_textView2"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
            android:layout_weight="1"
	        android:text="借出时间"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:textSize="12dp"/>
	  
	    <TextView
	        android:id="@+id/xujie_textView3"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="1"
	        android:text="应还时间"
	        android:textColor="@color/white"
	        android:gravity="center"
	        android:textSize="12dp"/>
	    	    
        <TextView
            android:id="@+id/xujie_textView4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="馆藏位置"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12dp"/>            
	</LinearLayout>
     <ListView
        android:id="@+id/xujie_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/xujie_head"
        android:focusable="true"
        android:dividerHeight="1px"
        android:divider="#FFF" />
</RelativeLayout>